<form role="form" action="/report/show" method="get">
  <div class="form-group">
    <label for="date_start">From:</label>
    <input id="date_start" name="date_start" type="text" class="form-control datepicker" />
  </div>
  
  <div class="form-group">
    <label for="date_end">To:</label>
    <input id="date_end" name="date_end" type="text" class="form-control datepicker" />
  </div>
  
  <div class="form-group">
    <label for="location">Location:</label>
    <select id="location_id" name="location_id" class="form-control">
      <% for location in locations %>
  	    <option value="<%=location.id%>"><%=location.name%></option>
      <% end %>
    </select>
  </div>
  
  <input name="commit" type="submit" value="Search" class="btn btn-default"/>
</form>