<% if @reports.length > 0 then %>
  <% for report in @reports do %>
    <% sum = summary(report) %>

    <h1>
      <%= report.location.name %>, <%= report.date %>
    </h1>
    
    <table class="table table-striped">
      <tr>
        <th><%=t("report.distributor")%></th>
        <th><%=t("report.mahabig")%></th>
        <th><%=t("report.big")%></th>
        <th><%=t("report.medium")%></th>
        <th><%=t("report.small")%></th>
        <th><%=t("report.quantity")%></th>
        <th><%=t("report.scores")%></th>
      </tr>

      <% for record in records(report) %>
        <tr>
          <td><%= record.distributor %></td>
          <td><%= record.mahabig %></td>
          <td><%= record.big %></td>
          <td><%= record.medium %></td>
          <td><%= record.small %></td>
          <td><%= quantity(record) %></td>
          <td><%= points(record) %></td>
        </tr>
      <% end %>  

      <tr class="info">
        <td><%=t("report.summary")%></td>
        <td><%= sum[:mahabig] %></td>
        <td><%= sum[:big] %></td>
        <td><%= sum[:medium] %></td>
        <td><%= sum[:small] %></td>
        <td><%= sum[:quantity] %></td>
        <td><%= sum[:points] %></td>
      </tr>    
    </table> 
  <% end %>
<% else %>
  <%= t("report.not_found") %>
<% end %>